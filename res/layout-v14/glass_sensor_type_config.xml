<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector_drawable"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <CheckBox
            android:id="@+id/autoEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:checked="false"
            android:onClick="onClickAutoEnable"
            android:text="Auto Enable" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/selectPulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickSelectPulseType"
                android:text="Select P.Device" />

            <!-- <Button -->
            <!-- android:id="@+id/selectDeviceMac" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:onClick="onClickSelectPulsDeviceMac" -->
            <!-- android:text="Select Device" /> -->

            <CheckBox
                android:id="@+id/enablePulse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onClickEnablePulse"
                android:text="Enable Pulse" />
        </LinearLayout>

        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:paddingLeft="3dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="Sensor Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/device_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="MAC-Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray" />

        <!-- Activity Sensor.. -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/selectAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickSelectAccSensor"
                android:text="Select Acc.Device" />

            <!-- <Button -->
            <!-- android:id="@+id/selectDeviceMac" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:onClick="onClickSelectPulsDeviceMac" -->
            <!-- android:text="Select Device" /> -->

            <CheckBox
                android:id="@+id/enableAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onClickEnableAccSensor"
                android:text="Enable Acc" />
        </LinearLayout>

        <TextView
            android:id="@+id/acc_sensor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:paddingLeft="3dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="Sensor Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/acc_device_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="MAC-Address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />
        
        <Button
                android:id="@+id/prefSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickExit"
                android:text="Exit" />
    </LinearLayout>

</ScrollView>